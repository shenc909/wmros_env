<?xml version="1.0"?>

<launch>
  <!-- common args -->
  <arg name="namespace" default="ackermann_vehicle"/>
  <arg name="world_name" default="track1" />
  
  <!-- Gazebo world args -->
  <arg name="gazebo_gui" default="false"/>
  
  <!-- vehicle pose and args -->
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.1"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0.0"/>
  <arg name="cmd_timeout" default="0.5"/>
  
  <!-- reward function args -->
  <arg name="waypoint_reward" default="5.0" />
  <arg name="time_reward" default="-0.5" />
  <arg name="threshold_distance" default="1.5" />

  
  <include file="$(find worldmodel_maps)/launch/launch_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <include file="$(find worldmodel_robots)/launch/spawn_car.launch">
    <arg name="namespace" value="$(arg namespace)"/>
    <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
    <arg name="x" value="$(arg x)"/>
    <arg name="y" value="$(arg y)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="roll" value="$(arg roll)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="yaw" value="$(arg yaw)"/>
  </include>

  <include file="$(find worldmodel_interface)/launch/reward_publisher.launch">
    <arg name="namespace" value="$(arg namespace)"/>
    <arg name="track_name" value="$(arg world_name)" />
    <arg name="waypoint_reward" value="$(arg waypoint_reward)" />
    <arg name="time_reward" value="$(arg time_reward)" />
    <arg name="threshold_distance" value="$(arg threshold_distance)" />
  </include>

</launch>