<?xml version="1.0"?>

<launch>
  <arg name="namespace" default="ackermann_vehicle"/>
  <arg name="world_name" default="Bowtie_track" />
  
  <include file="$(find worldmodel_robots)/launch/ackermann_vehicle.launch">
    <arg name="namespace" value="$(arg namespace)"/>
  </include>

  <include file="$(find worldmodel_robots)/launch/rviz.launch">
    <arg name="namespace" value="$(arg namespace)"/>
  </include>

  <arg name="cmd_timeout" default="0.5"/>
  <!-- Vehicle pose -->
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.1"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <include file="$(find worldmodel_maps)/launch/launch_world.launch">
      <arg name="world_name" value="$(arg world_name)"/>
    </include>
    
  <group ns="$(arg namespace)">

    <!-- Spawn the vehicle. -->
    <node name="spawn_vehicle" pkg="gazebo_ros" type="spawn_model"
          args="-urdf -param /$(arg namespace)/robot_description -model ackermann_vehicle
                -gazebo_namespace /gazebo -robot_namespace $(arg namespace)
                -x $(arg x) -y $(arg y) -z $(arg z)
                -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)">
    </node>

    <!-- Load the joint controllers. One of these publishes the joint states
         to joint_states. -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner"
          args="$(find worldmodel_robots)/config/em_3905_joint_ctrlr_params.yaml"/>

    <!-- Control the steering, axle, and shock absorber joints. -->
    <node name="ackermann_controller" pkg="worldmodel_robots"
          type="ackermann_controller">
      <param name="cmd_timeout" value="$(arg cmd_timeout)"/>
      <param name="tf_prefix" value="$(arg namespace)"/>
      <rosparam file="$(find worldmodel_robots)/config/em_3905_ackermann_ctrlr_params.yaml" command="load"/>
    </node>

    <remap from="/ground_truth/state" to="/$(arg namespace)/ground_truth/state"/>
    <node name="odom_to_tf" pkg="worldmodel_robots" type="odom_to_tf.py">
      <param name="tf_prefix" value="$(arg namespace)"/>
    </node>

  </group>
    

</launch>
